{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "clang c++20",
            "displayName": "Clang c++ 20",
            "description": "Clang compiler using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/clang",
            "cacheVariables": {
                "CMAKE_PREFIX_PATH": {
                    "type": "PATH",
                    "value": "/home/ahodges/libs/install/libc++"
                },
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_FLAGS": "\"-stdlib=libc++\"",
                "CMAKE_C_COMPILER": "/bin/clang",
                "CMAKE_CXX_COMPILER": "/bin/clang++",
                "ARBY_FIND_BOOST": true
            },
            "vendor": {
                "example.com/ExampleIDE/1.0": {
                    "autoFormat": true
                }
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "clang c++20"
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true
            }
        }
    ],
    "vendor": {
        "example.com/ExampleIDE/1.0": {
            "autoFormat": false
        }
    }
}